<% provide :title, "User Profile for " + @user.name %>
<div class="row">
  <aside class="col-mid-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      
      <p>
        email: <%= @user.email %>
      </p>
        
    </section>
  </aside>
</div>